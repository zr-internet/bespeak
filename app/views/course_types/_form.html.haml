= form_for @course_type do |f|
  - if @course_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@course_type.errors.count, "error")} prohibited this course_type from being saved:"
      %ul
        - @course_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :cost
    = f.text_field :cost
  .actions
    = f.submit 'Save'
